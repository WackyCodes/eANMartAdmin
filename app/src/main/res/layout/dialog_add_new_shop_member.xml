<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:visibility="gone"
        android:id="@+id/dialog_close_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:padding="4dp"
        android:tint="@color/colorSecondary"
        app:srcCompat="@drawable/ic_close_black_24dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="4dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:tint="@color/colorSecondary"
                app:srcCompat="@drawable/ic_account_circle_black_24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="New Shop's Member"
                android:textAlignment="center"
                android:textColor="@color/colorDarkViolet"
                android:textSize="18dp"
                android:gravity="center_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dialog_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="4dp"
                    android:paddingLeft="8dp"
                    android:text=" AN Electronics"
                    android:textColor="@color/colorPrimary" />
                <TextView
                    android:id="@+id/dialog_shop_id_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="(462090909)"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:padding="4dp"
                    android:paddingLeft="8dp"
                    android:text="Member Name : "
                    android:textColor="@color/colorSecondary"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/dialog_shop_member_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/back_1dp_border_4dp_radius_no_color"
                    android:backgroundTint="@color/colorPrimary"
                    android:hint="Enter Member Name"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:singleLine="true"
                    android:textColor="@color/colorSecondary" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:padding="4dp"
                    android:paddingLeft="8dp"
                    android:text="Member Email : "
                    android:textColor="@color/colorSecondary"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/dialog_shop_member_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/back_1dp_border_4dp_radius_no_color"
                    android:backgroundTint="@color/colorPrimary"
                    android:hint="Enter Email"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:singleLine="true"
                    android:textColor="@color/colorSecondary" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:padding="4dp"
                    android:paddingLeft="8dp"
                    android:text="Member Mobile"
                    android:textColor="@color/colorSecondary"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/dialog_member_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/back_1dp_border_4dp_radius_no_color"
                    android:backgroundTint="@color/colorPrimary"
                    android:hint="Enter Mobile"
                    android:inputType="number"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:singleLine="true"
                    android:textColor="@color/colorSecondary" />

            </LinearLayout>

            <RadioGroup
                android:id="@+id/dialog_radio_group"
                android:orientation="horizontal"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/shop_owner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:drawableTint="@color/colorSecondary"
                    android:backgroundTint="@color/colorYellow"
                    android:textColor="@color/colorBlack"
                    android:background="@drawable/back_rectangle_4dp_layout"
                    android:text="Shop Owner"/>

                <RadioButton
                    android:id="@+id/shop_manager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:drawableTint="@color/colorSecondary"
                    android:backgroundTint="@color/colorYellow"
                    android:background="@drawable/back_rectangle_4dp_layout"
                    android:textColor="@color/colorBlack"
                    android:text="Shop Manager"/>

            </RadioGroup>


        </LinearLayout>

    </ScrollView>


</LinearLayout>