<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/back_rectangle_4dp_layout"
    android:layout_marginLeft="18dp"
    android:layout_marginRight="18dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:padding="10dp"
        android:text="Change Service Status"
        android:textAlignment="center"
        android:textColor="@color/colorSecondary"
        android:textSize="16dp" />

    <RadioGroup
        android:id="@+id/dialog_radio_group"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/close_radio_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:drawableTint="@color/colorSecondary"
            android:backgroundTint="@color/colorYellow"
            android:textColor="@color/colorBlack"
            android:background="@drawable/back_rectangle_4dp_layout"
            android:text="Close Service"/>

        <RadioButton
            android:id="@+id/open_radio_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:drawableTint="@color/colorSecondary"
            android:backgroundTint="@color/colorYellow"
            android:background="@drawable/back_rectangle_4dp_layout"
            android:textColor="@color/colorBlack"
            android:text="Open Service"/>

    </RadioGroup>

    <EditText
        android:visibility="gone"
        android:id="@+id/close_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back_1dp_border_4dp_radius"
        android:maxHeight="90dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:minLines="2"
        android:maxlines="6"
        android:padding="2dp"
        android:textSize="14dp"
        android:scrollbars="vertical"
        android:focusedByDefault="true"
        android:textColor="@color/colorBlack"
        android:hint="Write Your Message for customers..."
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="CANCEL"
            android:textAlignment="center"
            android:textColor="@color/colorSecondary"
            android:textSize="12dp" />
        <TextView
            android:id="@+id/dialog_ok_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="UPDATE"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp" />

    </LinearLayout>


</LinearLayout>