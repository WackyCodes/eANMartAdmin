<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/back_rectangle_4dp_layout"
        android:backgroundTint="@color/colorWhite"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/dialog_add_image"
            android:layout_width="160dp"
            android:layout_height="150dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_photo_black_24dp" />
        <TextView
            android:id="@+id/dialog_change_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add/Change Image"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"/>
        <EditText
            android:id="@+id/dialog_name"
            android:layout_width="200dp"
            android:layout_height="32dp"
            android:hint="Category Name"
            android:singleLine="true"
            android:layout_marginTop="10dp"
            android:padding="4dp"
            android:drawablePadding="4dp"
            android:drawableTint="@color/colorPrimary"
            android:background="@drawable/back_1dp_border_4dp_radius"
            android:textColor="@color/colorSecondary"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/dialog_upload_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/back_rectangle_4dp_layout"
            android:backgroundTint="@color/colorBlue"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:text="Upload Image"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dialog_cancel_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="CANCEL"
                android:textAlignment="center"
                android:textColor="@color/colorRed"/>
            <TextView
                android:id="@+id/dialog_ok_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="ADD"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>